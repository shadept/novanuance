// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "windows", "linux-arm64-openssl-1.1.x", "linux-musl"]
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model Employee {
    id                     String     @id @default(cuid())
    name                   String
    title                  String
    baseSalary             Decimal
    commissionPercent      Decimal
    thresholdForCommission Decimal
    taxRate                Decimal
    hireDate               DateTime
    terminationDate        DateTime?
    receipts               Receipt[]
    vacations              Vacation[]
}

model Receipt {
    employee   Employee @relation(fields: [employeeId], references: [id])
    employeeId String
    date       DateTime
    amount     Decimal

    @@id([employeeId, date])
}

model Vacation {
    id         String   @id @default(cuid())
    employee   Employee @relation(fields: [employeeId], references: [id])
    employeeId String
    date       DateTime

    @@unique([employeeId, date])
}

model Warehouse {
    id                    String                  @id @default(cuid())
    name                  String
    address               String
    stock                 InventoryStock[]
    InventoryStockHistory InventoryStockHistory[]
}

model InventoryItem {
    id           String                  @id @default(cuid())
    barcode      String                  @unique
    brand        String
    name         String
    price        Decimal
    imageUrl     String?
    description  String?
    stock        InventoryStock[]
    stockHistory InventoryStockHistory[]
}

model InventoryStock {
    warehouseId String
    itemId      String
    quantity    Int
    warehouse   Warehouse     @relation(fields: [warehouseId], references: [id])
    item        InventoryItem @relation(fields: [itemId], references: [id])

    @@unique([warehouseId, itemId])
}

model InventoryStockHistory {
    warehouseId String
    itemId      String
    quantity    Int
    date        DateTime
    warehouse   Warehouse     @relation(fields: [warehouseId], references: [id])
    item        InventoryItem @relation(fields: [itemId], references: [id])

    @@unique([warehouseId, itemId, date])
}
